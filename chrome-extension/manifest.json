{
  "manifest_version": 3,
  "name": "QuickSight Auto Downloader",
  "version": "1.0.0",
  "description": "Automatically downloads Supply & Demand data from QuickSight every 1.5 hours between 7 AM - 5 PM",
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "downloads",
    "scripting"
  ],
  
  "host_permissions": [
    "https://us-east-1.quicksight.aws.amazon.com/*",
    "https://*.quicksight.aws.amazon.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://us-east-1.quicksight.aws.amazon.com/*",
        "https://*.quicksight.aws.amazon.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickSight Auto Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 